<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hydronion.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_admin"
            app:destination="@id/adminFragment" />

        <action
            android:id="@+id/action_login_to_user"
            app:destination="@id/userFragment" />

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.hydronion.AdminAccountFragment"
        android:label="Admin Dashboard" />

    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.hydronion.MonitoringFragment"
        android:label="User Home" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.hydronion.RegisterFragment"
        android:label="Register" />

</navigation>
